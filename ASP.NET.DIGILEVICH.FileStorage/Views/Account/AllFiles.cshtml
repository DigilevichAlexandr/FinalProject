@model IEnumerable<ASP.NET.DIGILEVICH.FileStorage.Models.StoredFile>

@{
    ViewBag.Title = "AllFiles";
}
<div class="jumbotron">
<h2>AllFiles</h2>

<p>
    <h3>Поиск Файлов</h3>
    @using (Html.BeginForm("Search", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="text" name="teg" /><br>
        <input type="submit" value="Найти" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Download", "GetFile" , item) 
        </td>
        <td>
            @Html.ActionLink("Delete", "DelFile", item)
        </td>

    </tr>
}

</table>
</div>
